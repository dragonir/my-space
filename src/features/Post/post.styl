@import '../../utils/utils.styl';
.post-container {
  a:last-of-type .post-item {
    border: none;
  }
  .filter-info {
    font-size: 16px;
    width: 100%;
    height: auto;
    padding: 0;
    text-align: center;
    font-weight: 500;
    color: $black5;
    &:first-of-type {
      margin-top: 10px;
    }
  }
  .post-item {
    border-bottom: 1px solid $white3;
    box-sizing: border-box;
    padding: 35px 30px;
    margin: 0 20px;
    transition: background .3s ease;
    &:hover {
      background: $white2;
      cursor: pointer;
    }
    .post-title {
      font-size: 1.5em;
      line-height: 1em;
      color: $black4;
      text-align: center;
    }
    .item-info {
      color: $color3;
      text-align: center;
      font-size: .75em;
      margin: 1em auto;
    }
    .item-body {
      color: $gray1;
      padding: 8px 0;
      white-space: pre-line;
      overflow: hidden;
      font-size: 1em;
      text-align: justify;
      text-align-last: left;
      word-break: break-all;
      text-indent: 2em;
      line-height: 1.5;
    }
    .item-labels {
      margin: 1em 0;
      text-align: center;
      .label-item {
        padding: 2px 8px;
        border-radius: 4px;
        background: $white4;
        margin-right: 10px;
        font-size: .5em;
      }
    }
  }
  .post-changer {
    overflow: hidden;
    padding: 30px 20px 10px;
    .changer-left {
      float: left;
    }
    .changer-right {
      float: right;
    }
  }
  a:hover {
    text-decoration: none;
  }
}
.bp3-dark {
  .filter-info {
    color: $white5;
  }
  .post-item {
    border-bottom: 1px solid $bg2;
    &:hover {
      background: $bg2;
    }
    h3 {
      color: $white3;
    }
    .post-title {
      color: $white2;
    }
    .item-info {
      color: $white5;
    }
    .item-body {
      color: $gray4;
    }
    .item-labels {
      .label-item {
        background: $bg2;
        color: $gray4;
      }
    }
  }
}
@media screen and (max-width: 800px) {
  .post-container {
    .post-item {
      padding: 20px 0;
    }
  }
}